.body {

}

.tab {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.tab .tab-item {
  position: relative;
  height: 60rpx;
  line-height: 60rpx;
  flex: 1;
  text-align: center;
  font-size: 30rpx;
  color: #333;
}

.tab .tab-item.active:after {
  position: absolute;
  left: 0;
  bottom: 0;
  content: '';
  width: 100%;
  height: 1px;
  background-color: #20b907;
}

.bd-list {
  background-color: #fff;
  padding: 10rpx 20rpx;
  margin-bottom: 20rpx;
}

.bd-list .item-list {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 60rpx;
}

.bd-list .item-list .item-name {
  width: 150rpx;
  text-align: right;
}

.bd-list .item-list .item-content {
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.bd-list .item-single {
  width: 50%;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 50rpx;
}

.bd-list .receive-num {
  width: 150rpx;
  height: 50rpx;
  border: 1px solid #e4e4e4;
  padding-left: 10rpx;
  border-radius: 10rpx;
}

.bd-list .item-add {
  padding-left: 60rpx;
  position: relative;
  color: #ff9935;
}

.bd-list .item-add:before {
  position: absolute;
  top: -10rpx;
  left: 15rpx;
  content: '';
  width: 50rpx;
  height: 50rpx;
  background: url("data:image/png;base64,") no-repeat;
  background-size: cover;
}

.bad-area {
  height: auto !important;

}

.bad-area .single {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 20rpx 0;
}

.bad-area .item-name {
  width: 180rpx;
  text-align: right;
}

.bad-area .item-content {
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.bad-area .bad-num {
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.bad-area .bad-num .bad-input {
  width: 150rpx;
  height: 50rpx;
  border-radius: 10rpx;
  border: 1px solid #e4e4e4;
  padding-left: 10rpx;
}

.bad-area .bad-reason {
  width: 300rpx;
}

.bad-area .picker-wrap {
  position: relative;
  text-align: center;
}

.bad-area .picker-wrap:after {
  position: absolute;
  top: -8rpx;
  right: 0rpx;
  content: '';
  width: 48rpx;
  height: 48rpx;
  background: url("data:image/png;base64,") no-repeat;
  background-size: cover;
}

.bad-area .item-img {
  flex: 1;
}



.img-add {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border: 1px solid #D9D9D9;
  box-sizing: border-box;
}

.img-add:before {
  width: 4rpx;
  height: 80rpx;
}

.img-add:after {
  width: 80rpx;
  height: 4rpx;
}

.img-add:before, .img-add:after {
  content: " ";
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #D9D9D9;
}

.img-wrap, .img-add {
  float: left;
}

.img-element {
  float: left;
  display: block;
  width: 160rpx;
  height: 160rpx;
}

.img-inner {
  position: absolute;
  z-index: 1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;

}

.item-diff {
  justify-content: flex-end;
}

.item-diff .item-save {
